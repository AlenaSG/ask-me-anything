{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Your Question</label>
      {{textarea value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{textarea value=notes id="notes"}}
    </div>

    <button class="buttonColor" {{action 'saveQuestion'}}>Submit Your Question</button>
  </form>
</div>
{{else}}
  <button class="buttonColor" {{action 'questionFormShow'}}>Ask a New Question</button>
{{/if}}
