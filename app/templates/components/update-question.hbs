{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question: {{question.content}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your Name:</label><br>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Your Question:</label><br>
        {{textarea value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes:</label><br>
        {{textarea value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Save Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
